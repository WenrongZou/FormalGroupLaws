/-- Given a formal group law `F (X, Y)` over ring `R`, `F (X, Y)‚âÖ X + Y (mod deg 2)` -/
theorem FormalGroup.truncTotalDegTwo (F : FormalGroup R) :
  ((truncTotalDegHom 2) F.toFun) = MvPolynomial.X 0 + MvPolynomial.X 1 := by
  ext d
  simp [truncTotalDegHom, truncTotalDeg_eq, MvPolynomial.coeff_sum, coeff_truncTotalDegEq]
  by_cases hd : d = Finsupp.single 0 1
  ¬∑ simp [hd, F.lin_coeff_X]
  ¬∑ by_cases hd‚ÇÅ : d = Finsupp.single 1 1
    ¬∑ simp [hd‚ÇÅ, F.lin_coeff_Y]
    ¬∑ simp [MvPolynomial.coeff_X', if_neg (Ne.symm hd), if_neg (Ne.symm hd‚ÇÅ)]
      by_cases hd‚ÇÇ : d = 0
      ¬∑ simp [hd‚ÇÇ, F.zero_constantCoeff]
      ¬∑ intro h
        have heq : d 0 + d 1 = d 1 + d 0 := by ring_nf
        interval_cases (d 0 + d 1)
        ¬∑ have d‚ÇÄeq : d 0 = 0 := by linarith
          have d‚ÇÅeq : d 1 = 0 := by linarith
          have deq_zero : d = 0 := by
            ext x
            fin_cases x
            all_goals simp [d‚ÇÄeq, d‚ÇÅeq]
          contradiction
        ¬∑ have d‚ÇÅeq : (d 0 = 1 ‚àß d 1 = 0) ‚à® (d 0 = 0 ‚àß d 1 = 1) := by
            omega
          obtain deq | deq := d‚ÇÅeq
          ¬∑ have hc : d = Finsupp.single 0 1 := by
              ext x
              fin_cases x
              all_goals simp [deq]
            contradiction
          ¬∑ have hc : d = Finsupp.single 1 1 := by
              ext x
              fin_cases x
              all_goals simp [deq]
            contradiction

